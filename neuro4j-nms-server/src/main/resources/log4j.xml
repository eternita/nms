<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
        <param name="Threshold" value="FINE"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{HH:mm:ss} %-5p %c{2} - %m%n"/>
        </layout>
    </appender>

    <appender name="ERROR_FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="C:/dev/local/_logs/n4j-error.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <param name="Threshold" value="ERROR"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p %c %x - %m%n"/>
        </layout>
    </appender>

    <logger name="org.neuro4j">
        <level value="INFO"/>
        <appender-ref ref="STDOUT"/>
    </logger>


<!--
    <root>
        <level value="WARN"/>
        <priority value="ERROR"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
-->    
    
    <root>
        <level value="FINE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    

</log4j:configuration>
